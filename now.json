{
  "version": 2,
  "name": "neu-web",
  "alias": "dev-web.pcwa.net",
  "public": false,
  "build": {
    "env": {
      "NEXT_FORECAST_URL": "https://dev-web.pcwa.net/lambda/forecast",
      "NEXT_MAILJET_URL": "https://dev-web.pcwa.net/lambda/mail",
      "NEXT_TARGET": "serverless"
    }
  },
  "env": {
    "NODE_DARKSKY_API_KEY": "@web-darksky-dev-api-key",
    "NODE_DARKSKY_ROUTE_PREFIX": "/lambda/forecast",
    "NODE_MAILJET_KEY": "@web-mailjet-key",
    "NODE_MAILJET_SECRET": "@web-mailjet-secret",
    "NODE_MAILJET_SENDER": "webmaster@pcwa.net",
    "NODE_MAILJET_ROUTE_PREFIX": "/lambda/mail"
  },
  "builds": [
    {
      "src": "packages/next/package.json",
      "use": "@now/next",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    { "src": "packages/forecast/dist/*.js", "use": "@now/node-server" },
    { "src": "packages/mailjet/dist/**/*.js", "use": "@now/node" }
  ],
  "routes": [
    {
      "src": "^/lambda/forecast(.*)$",
      "dest": "packages/forecast/dist/server.js"
    },
    {
      "src": "^/lambda/mail(.*)$",
      "dest": "packages/mailjet/dist/index.js"
    },
    {
      "src": "^/(.*)$",
      "dest": "/packages/next/$1"
    }
  ],
  "regions": ["sfo1"]
}
