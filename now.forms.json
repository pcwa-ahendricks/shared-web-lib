{
  "version": 2,
  "name": "forms",
  "alias": "forms.pcwa.net",
  "public": false,
  "build": {
    "env": {
      "NPM_TOKEN": "@npm-token",
      "NEXT_MAILJET_URL": "https://forms.pcwa.net/lambda/mail",
      "NEXT_COSMIC_URL": "https://forms.pcwa.net/lambda/cosmic",
      "NEXT_TARGET": "serverless",
      "NEXT_RECAPTCHA_SITE_KEY": "@web-recaptcha-site-key"
    }
  },
  "env": {
    "NODE_MAILJET_KEY": "@web-mailjet-key",
    "NODE_MAILJET_SECRET": "@web-mailjet-secret",
    "NODE_MAILJET_SENDER": "webmaster@pcwa.net",
    "NODE_MAILJET_ROUTE_PREFIX": "/lambda/mail",
    "NODE_COSMIC_ROUTE_PREFIX": "/lambda/cosmic",
    "NODE_RECAPTCHA_SITE_KEY": "@web-recaptcha-site-key",
    "NODE_RECAPTCHA_SECRET_KEY": "@web-recaptcha-secret-key",
    "NODE_COSMIC_READ_ACCESS_KEY": "@web-cosmic-read-key",
    "NODE_COSMIC_WRITE_ACCESS_KEY": "@web-cosmic-write-key"
  },
  "builds": [
    {
      "src": "packages/www/package.json",
      "use": "@now/next",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    { "src": "packages/mailjet/dist/**/*.js", "use": "@now/node" },
    { "src": "packages/cosmic/dist/**/*.js", "use": "@now/node" }
  ],
  "routes": [
    {
      "src": "/lambda/mail(.*)",
      "dest": "packages/mailjet/dist/index.js",
      "headers": {
        "cache-control": "s-maxage=1,stale-while-revalidate",
        "Access-Control-Allow-Origin": "https://forms.pcwa.net"
      }
    },
    {
      "src": "/lambda/cosmic(.*)",
      "dest": "packages/cosmic/dist/index.js",
      "headers": {
        "cache-control": "s-maxage=1,stale-while-revalidate",
        "Access-Control-Allow-Origin": "https://forms.pcwa.net"
      }
    },
    {
      "src": "/irrigation-controller-rebate(.*)",
      "dest": "/404",
      "status": 404
    },
    {
      "src": "/(?:services|forms|forms/rebates|typography)(?:.html)?/?$",
      "dest": "packages/www/_error",
      "status": 404
    },
    {
      "src": "/(.*)",
      "dest": "/packages/www/$1",
      "continue": true,
      "headers": {
        "cache-control": "maxage=0, s-maxage=172800",
        "x-request-path": "$1"
      }
    },
    { "handle": "filesystem" },
    {
      "src": "/washing-machine-rebate/?",
      "dest": "/packages/www/forms/rebates/washing-machine.html",
      "headers": {
        "cache-control": "maxage=0, s-maxage=172800"
      }
    },
    {
      "src": "/irrigation-efficiencies-rebate/?",
      "dest": "/packages/www/forms/rebates/irrigation-efficiencies.html",
      "headers": {
        "cache-control": "maxage=0, s-maxage=172800"
      }
    },
    {
      "src": "/lawn-replacement-rebate/?",
      "dest": "/packages/www/forms/rebates/lawn-replacement.html",
      "headers": {
        "cache-control": "maxage=0, s-maxage=172800"
      }
    },
    {
      "src": "/toilet-rebate/?",
      "dest": "/packages/www/forms/rebates/toilet.html",
      "headers": {
        "cache-control": "maxage=0, s-maxage=172800"
      }
    },
    {
      "src": "/account-contact-info/?",
      "dest": "/packages/www/forms/account/contact-info.html",
      "headers": {
        "cache-control": "maxage=0, s-maxage=172800"
      }
    }
  ],
  "regions": ["sfo1"]
}
